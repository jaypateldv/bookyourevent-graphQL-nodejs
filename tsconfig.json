{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "strictNullChecks": false,
    "module": "commonjs", // or "esnext"
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["module"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  